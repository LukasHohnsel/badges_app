<h1><u>Badges</u></h1>
<% if current_user && current_user.admin? %>
<table border="1" cellspacing="5" cellpadding="5">
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @badges.each do |badge| %>
  <tr>
    <td><%= badge.name %></td>
    <td><%= badge.description %></td>
    <td><%= link_to 'Show', badge %></td>
    <td><%= link_to 'Edit', edit_badge_path(badge) %></td>
    <td><%= link_to 'Destroy', badge, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Badge', new_badge_path %>
<% end %>

<div class="field">
   <%= hidden_field_tag "badge[user_ids][]", nil %>
   <% @users.each do |user| %>
   <%= check_box_tag "badge[user_ids][]", user.id, @badge.user_ids.include?(user.id), id: dom_id(user) %>
   <%= label_tag dom_id(user), user.name %><br/>
   <% end %>
  </div>