<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @badge.name %>
</p>

<p>
  <b>Description:</b>
  <%= @badge.description %>
</p>

<p>
	<b>Given to:</b>
	<ul>
	<% @badge.users.each do |user| %>
	  <li><%= user.name %></li>
	  <% end %>
	</ul>
</p>

<% if current_user && current_user.admin? %>
<%= link_to 'Edit', edit_badge_path(@badge) %> |
<% end %>
<%= link_to 'Back', badges_path %>
